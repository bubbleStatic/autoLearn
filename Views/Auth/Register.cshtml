@model RegistrationData
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/Registration.css" media="all" />
</head>
<body>
    <div class="registrationContainer">

        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="registrationDiv">
                <input asp-for="login" placeholder="Логин"></input>
                <input asp-for="password" placeholder="Пароль"></input>
                <input asp-for="email" placeholder="Email"></input>
                <input asp-for="secretQuestion" placeholder="Секретный вопрос"></input>
                <input asp-for="answerToTheSecretQuestion" placeholder="Ответ на вопрос"></input>
                <input type="submit" value="Зарегистрироваться">
            </div>
        </form>
        @Html.ValidationSummary(false,"",new{@style="color:orange"})
    </div>
</body>
</html>
